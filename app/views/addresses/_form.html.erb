<div class="row offset-md-3 col-md-6">
  <%= form_for(@address) do |f| %>
    <%= render "/devise/shared/error_messages", resource: @address %>

    <div class="my-3">
      <%= f.label :address %>
      <%= f.text_area :address, class: "w-100 form-control", id: "address-input" %>
    </div>

    <div class="my-3">
      <div id="map" data-controller="map" data-map-api-key="<%= Rails.application.credentials.development[:api_key] %>" style="height: 300px;"></div>
    </div>

    <div class="my-3">
      <%= f.label :city %>
      <%= f.text_field :city, class: "w-100 form-control", id: "address_city" %>
    </div>

    <div class="my-3">
      <%= f.label :state %>
      <%= f.text_field :state, class: "w-100 form-control", id: "address_state" %>
    </div>

    <div class="my-3">
      <%= f.label :zip_code %>
      <%= f.number_field :zip_code, class: "w-100 form-control", id: "address_zip_code" %>
    </div>

    <div class="my-3">
      <%= f.label :phone_number %>
      <%= f.text_field :phone_number, class: "w-100 form-control" %>
    </div>

    <div class="text-center my-5">
      <%= f.submit "Save Address", class: "btn btn-login text-uppercase fw-bold" %>
      <%= link_to "Back to Profile", user_path(current_user), class: "btn btn-secondary text-uppercase fw-bold p-2" %>
    </div>
  <% end %>
</div>
